<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <%- include('_bootstrap.ejs')%>
</head>
<body>
<%- include('_navigation.ejs')%> 
<br>
<div class="container">
  <form method="POST" action="/product/add-product" enctype="multipart/form-data">
    <div class="form-group">
      <lable>Book Category</lable>
      <select class="form-control" name="categoryId">
        <option value="0">select category</option>
        <%for(let category of categoryList){%>
          <option value='<%=category.id%>'><%=category.categoryName%></option>
        <%}%>  
      </select>
    </div>
    <div class="form-group">
      <label>Book name</label>
      <input type="text" name="bookName" class="form-control"/>
    </div>
    <div class="form-group">
      <label>Book Price</label>
      <input type="text" name="bookPrice" class="form-control"/>
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea class="form-control" name="bookDescription"></textarea>
    </div>
    <div class="form-group">
      <label>Book name</label>
      <input type="file" name="bookImage"/>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>

</body>
</html>
