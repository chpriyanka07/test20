<html>
    <head>
        <title>Book Shop</title>
        <style>
            .login-form{
                width: 300px;
                height: 150px;
                border: 1px solid red;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
                padding: 20px;
            }
            input{
                width: 100%;
                margin-bottom: 10px;
            }
        </style>
    </head>
    <body>
        <form method="POST" action="/signin">
        <div class="login-form">
            <div>
                <label>Email</label><br>
                <input type="text" name="email"/>
            </div>
            <div>
                <label>Password</label><br>
                <input type="password" name="password"/>
            </div>
            <div>
                <button style="margin-top: 10px;" type="submit">Sign-in</button>
            </div>
        </div>
        </form>
    </body>
</html>